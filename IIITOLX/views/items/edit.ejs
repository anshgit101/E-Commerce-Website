<%- include ("../partials/header") %>


<div class="container">

<h1 style="text-align: center;">Edit <%= item.name %></h1>

<div style="width: 30%; margin: 25px auto;">
    <form action="/items/<%= item._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="name" value="<%= item.name %>">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="image" value="<%= item.image %>">
        </div>
        <div class="form-group">
          <textarea name="discription" rows="5" class="form-control" ><%= item.discription %></textarea>
        </div>
        <div class="form-group">
          <input type="number" class="form-control" name="price" value="<%= item.price %>">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="hostel" value="<%= item.hostel %>">
        </div>
        <div class="form-group">
          <input type="number" class="form-control" name="room" value="<%= item.room %>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Update</button>
        </div>
      </form>
      <a href="/items/<%= item._id %>">Back</a>
</div>
  
</div>



<%- include ("../partials/footer") %>